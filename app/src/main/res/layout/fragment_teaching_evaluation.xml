<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="org.atctech.schoolmanagementsystem.fragments.TeachingEvaluationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teachers Name"
                android:fontFamily="cursive"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line_splash"/>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/boarder_background"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerTeahersName"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/drop" />

            </RelativeLayout>
            <!--<Spinner-->
                <!--android:background="@drawable/xml_border_light"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_height="35dp"-->
                <!--android:id="@+id/spinnerTeahersName"-->
                <!--android:layout_marginBottom="15dp"/>-->

        <LinearLayout
            android:background="@drawable/xml_border_light"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Teaching:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroupTeaching"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio1notGood"
                    android:text="Not Good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/radio1Good"
                    android:text="Good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radio1perfect"
                    android:text="Perfect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/radio1excellent"
                    android:text="Excellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </RadioGroup>

        </LinearLayout>

            <LinearLayout
                android:background="@drawable/xml_border_light"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:fontFamily="serif-monospace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Listening:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/radioGroupListening"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio2notGood"
                        android:text="Not Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio2Good"
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radio2Perfect"
                        android:text="Perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio2excellent"
                        android:text="Excellent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/xml_border_light"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:fontFamily="serif-monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Behaviour:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/radioGroupBehaviour"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio3NotGood"
                        android:text="Not Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio3Good"
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radio3Perfect"
                        android:text="Perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio3excellent"
                        android:text="Excellent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/xml_border_light"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:fontFamily="serif-monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Writing:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/radioGroupWriting"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio4NotGood"
                        android:text="Not Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio4Good"
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radio4Perfect"
                        android:text="Perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio4Excellent"
                        android:text="Excellent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:background="@drawable/xml_border_light"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:fontFamily="serif-monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Attaining Class:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/radioGroupAttaining"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio5NotGood"
                        android:text="Not Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio5Good"
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/radio5Perfect"
                        android:text="Perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radio5Excellent"
                        android:text="Excellent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/xml_border_light"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="serif-monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=" Comment:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/commenttxt"
                    android:background="@color/azur"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_height="80dp" />

            </LinearLayout>

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonstyle"/>

        </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>

</FrameLayout>
