<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="335dp"
    android:layout_height="wrap_content"
    android:background="@drawable/green_toast_style"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:id="@+id/toast_image_green"/>

    <TextView
        android:id="@+id/toast_text_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Password Changed Successfully"
        android:textColor="#FFF"
        android:layout_gravity="center_vertical"/>

</LinearLayout>